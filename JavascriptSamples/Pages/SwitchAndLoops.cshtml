<p id="demoWhile"></p>

<script>
    let textWhile = "";
    let i = 0;
    while (i < 10) {
        if (i === 7) { break; }
        textWhile += "<br>The number is " + i;
        i++;
    }
    document.getElementById("demoWhile").innerHTML = textWhile;

</script>


