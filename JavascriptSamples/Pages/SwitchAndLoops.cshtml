<p id="demoSet"></p>
<p id="demoSetCaption"></p>
<p id="demoSetMembers"></p>

<script>
    // Create a Set
    const lettersSet = new Set();

    // Create Variables
    const a = "a";
    const b = "b";
    const c = "c";

    // Add Values as Variables to the Set
    lettersSet.add(a);
    lettersSet.add(b);
    lettersSet.add(c);

    // Display the Size
    document.getElementById("demoSet").innerHTML = "The set has " + lettersSet.size + " values.";

    document.getElementById("demoSetCaption").innerHTML = "The numbers in the set are";
    // List all Elements
    let textSet = "";
    for (const x of lettersSet) {
        textSet += x + "<br>";
    }
    document.getElementById("demoSetMembers").innerHTML = textSet;

</script>

